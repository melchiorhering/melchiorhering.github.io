<section class='max-w-md px-4 py-12 mx-auto text-center text-white'>
	<h2 class='mb-4 text-2xl font-bold'>Voeg je naam toe!</h2>
	<form id='nameForm' class='flex flex-col gap-4'>
		<input
			type='text'
			name='name'
			required
			placeholder='Jouw naam'
			class='px-4 py-2 text-black rounded'
		/>
		<button
			type='submit'
			class='px-6 py-2 font-semibold text-white transition bg-blue-600 rounded hover:bg-blue-700'
		>
			Verstuur
		</button>
		<p id='responseMsg' class='mt-2 text-sm text-green-400'></p>
	</form>

	<script is:inline type='module'>
		const form = document.getElementById('nameForm')
		const msg = document.getElementById('responseMsg')

		form.addEventListener('submit', async (e) => {
			e.preventDefault()
			const formData = new FormData(form)
			const name = formData.get('name')
			const endpoint = 'YOUR_WEB_APP_URL' // 🔁 paste your Apps Script URL here

			try {
				const res = await fetch(endpoint, {
					method: 'POST',
					body: new URLSearchParams({ name })
				})

				const text = await res.text()
				msg.textContent = text.includes('Success') ? 'Toegevoegd! 🍻' : 'Er ging iets mis...'
				form.reset()
			} catch (err) {
				msg.textContent = 'Verbinding mislukt. Probeer opnieuw.'
			}
		})
	</script>
</section>
