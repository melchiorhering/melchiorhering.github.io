---
// src/leaderboard/components/TeamRoster.astro
---

<section class='max-w-4xl px-4 py-16 mx-auto text-white'>
	<h2 class='mb-8 text-3xl font-bold text-center'>Team Rosters</h2>
	<div id='team-roster' class='flex flex-col gap-6'></div>

	<script is:inline type='module'>
		const container = document.getElementById('team-roster')

		const res = await fetch(
			'https://raw.githubusercontent.com/melchiorhering/melchiorhering.github.io/main/teams.json'
		)
		const teams = await res.json()

		const html = teams
			.map(
				(team) => `
			<div class="p-6 text-center bg-gray-800 border border-gray-700 shadow rounded-xl hover:shadow-lg">
				<h3 class="mb-4 text-2xl font-semibold">${team.team}</h3>
				<div class="grid grid-cols-2 text-sm text-gray-300 place-items-center gap-y-2">
					${team.members.map((member) => `<div>${member}</div>`).join('')}
				</div>
			</div>
		`
			)
			.join('')

		container.innerHTML = html
	</script>
</section>
