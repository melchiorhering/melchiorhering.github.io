---
const links = [
	{ href: '#klassement', label: 'Klassement', icon: '📊' },
	{ href: '#teams', label: 'Teams', icon: '👥' },
	{ href: '#spellen', label: 'Spellen', icon: '🎮' },
	{ href: '#locatie', label: 'Locatie', icon: '📍' }
]
---

<nav class='z-40 w-full max-w-sm pt-2 mx-auto top-4 sm:max-w-xl md:max-w-2xl lg:max-w-4xl'>
	<div
		class='grid grid-cols-2 gap-3 px-4 py-3 shadow-lg rounded-xl bg-gray-900/80 ring-1 ring-white/10 backdrop-blur-md sm:flex sm:flex-wrap sm:justify-center sm:gap-4'
	>
		{
			links.map(({ href, label, icon }) => (
				<a
					href={href}
					class='inline-flex items-center justify-center gap-1 px-4 py-2 text-sm font-medium text-white transition bg-gray-800 rounded-full hover:bg-gray-700'
				>
					<span>{icon}</span>
					<span>{label}</span>
				</a>
			))
		}
	</div>
</nav>
