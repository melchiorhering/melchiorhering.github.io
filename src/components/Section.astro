---
import { cn } from '@/utils'

const { class: className, title } = Astro.props
---

<section class={cn(className, 'flex flex-col gap-y-5 md:flex-row md:gap-y-0')}>
	<div class='text-2xl font-semibold md:w-1/6'>
		<h2
			class='bg-gradient-to-r from-sky-600 to-black bg-clip-text text-transparent dark:bg-gradient-to-r dark:from-sky-600 dark:to-white'
		>
			{title}
		</h2>
	</div>
	<div class='flex flex-col gap-y-3 md:w-4/6'>
		<slot />
	</div>
</section>
