				<div class='flex items-center gap-x-4'>
					<!-- Linkedin -->
					<a
						class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
						href='https://www.linkedin.com/in/stijn-hering-contact/'
					>
						<Icon
							name='logos:linkedin-icon'
							class='h-4 w-4 flex-shrink-0 rounded bg-slate-100 fill-slate-100 stroke-slate-100'
						/>
					</a>
					<a
						class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
						href='https://bsky.app/profile/stijnhering.nl'
					>
						<Icon
							name='logos:bluesky'
							class='h-4 w-4 flex-shrink-0 rounded fill-slate-100 stroke-slate-100'
						/>
					</a>
					<a
						class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
						href='https://bsky.app/profile/stijnhering.nl'
					>
						<Icon
							name='logos:github-icon'
							class='h-4 w-4 flex-shrink-0 rounded bg-slate-100 fill-slate-100 stroke-slate-100'
						/>
					</a>
				</div>
				<!-- End Social Brands -->
			</div>
		</div>
	</div>
