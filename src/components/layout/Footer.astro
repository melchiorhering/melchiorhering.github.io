import { Icon } from 'astro-icon/components'
const currentYear = new Date().getFullYear()
---

<footer class='mx-auto mt-24 w-full'>
	<div class='border-t border-border pt-5'>
		<div
			class='flex flex-col items-center gap-y-3 sm:flex sm:flex-row sm:items-center sm:justify-between sm:gap-y-0'
		>
			<div class='flex gap-x-4 text-sm md:w-1/3'>
				<p class=''>Â© {currentYear} Stijn Hering. All rights reserved.</p>
			</div>

			<div
				class='mx-auto flex h-10 items-center justify-center gap-x-2 rounded-2xl bg-slate-100/50 font-bold text-black md:w-1/6'
				'
			>
				<p>Made with</p>
				<a href='https://astro.build/'>
					<Icon name='logos:astro' class='flex h-14 w-14 items-center justify-center rounded-2xl' />
