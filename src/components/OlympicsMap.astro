---
const lat = 52.33761564864483
const lng = 4.905614371129831
const zoom = 16

const embedUrl = `https://maps.google.com/maps?q=${lat},${lng}&z=${zoom}&output=embed`
const directionsUrl = `https://www.google.com/maps/dir/?api=1&destination=${lat},${lng}`
---

<section id='locatie' class='max-w-4xl px-4 py-16 mx-auto text-center'>
	<h2 class='mb-4 text-2xl font-bold text-center'>📍 De Locatie 📍</h2>
	<p class='mb-6 font-semibold'>Trek iets comfortable aan en strijd om de eer 🍻</p>

	<div class='relative w-full mb-6 overflow-hidden shadow-lg h-80 rounded-xl'>
		<iframe
			src={embedUrl}
			width='100%'
			height='100%'
			style='border:0;'
			allowfullscreen=''
			loading='lazy'
			referrerpolicy='no-referrer-when-downgrade'></iframe>
	</div>

	<a
		href={directionsUrl}
		target='_blank'
		rel='noopener noreferrer'
		class='inline-block px-6 py-3 text-lg font-bold text-white transition bg-green-600 rounded-full shadow hover:bg-green-700'
	>
		📍 Plan Route 🚲
	</a>
</section>
